<% if notice %>
  <div id="notice" class="well bg-info">
    <%= notice %>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1>
      <%= @document.file_file_name %>
    </h1>
  </div>

  <div class="panel-body lead">
    <p>
      <small><%= @document.text %></small>
    </p>
  </div>

  <div class="panel-footer">
    <h3>terminologies</h3>

    <table class="table">
      <% @document.terminologies.each do |terminology| %>
        <tr>
          <td>
            <%= terminology.name %>
          </td>

          <td class="text-right">
            <%= link_to 'Destroy', [@document,terminology], method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </table>

    <div class="row">
      <p class="col-md-6 text-left">
        <%= link_to 'Edit document', edit_document_path(@document), class: 'btn btn-info' %>
        <%= link_to 'Back', documents_path, class: 'btn btn-default' %>
      </p>

      <p class="col-md-6 text-right">
        <%= link_to 'New Terminology', new_document_terminology_path(@document), class: 'btn btn-primary' %>
      </p>
    </div>
  </div>
</div>
